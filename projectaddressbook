pipeline {
    agent any
    tools {
      maven 'mymaven'
      }
    stages {
        stage('scan and build') {
            steps {
            withSonarQubeEnv(installationName: 'mysonarqube', credentialsId: 'sonarqube-jen') {
                sh 'mvn clean package sonar:sonar'    
 }              
            }
        }
       stage('deploy') {
            steps {
                sshagent(['project_jenkins']) {
    // scp <src_dir> user@tomcatIP:/tomcat/webapps
    sh "scp -o StrictHostKeyChecking=no target/*.war project@18.118.151.171:/home/project/tomcat/webapps"
}
       }
           }

    }
}

