pipeline {
    agent any
    tools {
      maven 'mymaven'
      }
    stages {
        stage('scan') {
            steps {
                sh 'mvn clean package'              
            }
        }
       stage('deploy') {
            steps {
                sshagent(['betteronjenkins']) {
    // scp <src_dir> user@tomcatIP:/tomcat/webapps
    sh "scp -o StrictHostKeyChecking=no target/*.war good@3.135.185.131:/home/good/tomcat/webapps"
}
       }
           }

    }
}
