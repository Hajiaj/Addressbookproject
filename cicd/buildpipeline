pipeline {
    agent any
    tools {
      maven 'mymaven'
    }  
    stages {
        stage('scan and build') {
            steps {
            withSonarQubeEnv(installationName: 'mysonarqube', credentialsId: 'sonarqube-jen') {
              sh 'mvn clean package sonar:sonar'
   }       
           }
        }
        stage('deploy') {
            steps {
                sshagent(['Best _Jenkins']) {
    // scp <src_dir> users@tomcatip:tomcat/webapps
                   sh 'scp -o StrictHostKeyChecking=no target/*.war best@3.142.144.7:/home/best/tomcat/webapps'
    }
           }   
       }
    }   
}
