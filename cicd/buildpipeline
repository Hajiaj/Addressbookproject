pipeline {
    agent any
    tools {
      maven 'mymaven'
    }  
    stages {
        stage('scan and build') {
            steps {
            withSonarQubeEnv(installationName: 'mysonarqube', credentialsiId 'sonarqube-jen') {
                sh 'mvn clean package sona:sonar'
   }             
        }
        stage('deploy') {
            steps {
                sshagent(['Best _Jenkins']) {
    // scp <src_dir> users@tomcatip:tomcat/webapps
    sh 'scp -o StrictHostKeyChecking=no target/*.war best@3.23.63.163:/home/best/tomcat/webapps'
    }
           }   
       }
    }   
}
